generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Celebrity {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Vote        Vote[]

  @@map("celebrities")
}

model TVShow {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Vote        Vote[]

  @@map("tv_shows")
}

model Vote {
  id          Int        @id @default(autoincrement())
  celebrityId Int?
  tvShowId    Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime
  Celebrity   Celebrity? @relation(fields: [celebrityId], references: [id])
  TVShow      TVShow?    @relation(fields: [tvShowId], references: [id])

  @@index([celebrityId])
  @@index([tvShowId])
  @@map("votes")
}
